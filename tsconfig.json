{
  "compilerOptions": {
    "target": "es5",                                 // Target ECMAScript version
    "module": "esnext",                              // Module system for ECMAScript
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["firebase"],
    "allowJs": true,                                 // Allow JavaScript files to be compiled
    "skipLibCheck": true,                            // Skip type checking of declaration files
    "strict": true,                                  // Enable strict type checking options
    "forceConsistentCasingInFileNames": true,        // Ensure that file names are treated with consistent casing
    "noEmit": true,                                  // Do not emit output files after compilation
    "esModuleInterop": true,                         // Emit additional JS helpers to support CommonJS modules
    "moduleResolution": "node",                      // Module resolution strategy
    "resolveJsonModule": true,                       // Support importing JSON modules
    "isolatedModules": true,                         // Ensure each file can be safely transpiled
    "jsx": "react-jsx"                               // JSX code generation style for React
  },
  "include": ["src"],                                // Files to include in compilation
  "exclude": ["node_modules"]                        // Files to exclude from compilation
}
